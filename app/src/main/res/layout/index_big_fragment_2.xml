<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:visibility="gone"
        android:id="@+id/part1"
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <ImageView
            android:src="@mipmap/bg_index"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:paddingLeft="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <TextView
                    android:id="@+id/degrees"
                    android:text="25°"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_toRightOf="@+id/degrees"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:text="多云"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="4dp" />

                    <TextView
                        android:text="上海市 静安区"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/search_text"
                android:text="@string/index_hint_text"
                android:gravity="center|left"
                android:textSize="15sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="#B2B1BA"
                android:drawableRight="@mipmap/index_icon_serch"
                android:background="@drawable/index_search_bg"
                android:layout_width="match_parent"
                android:layout_height="39dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:id="@+id/fixed_head_ad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/top_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/top_1_pic"
                        android:src="@mipmap/index_icon_nav_1"
                        android:layout_width="27dp"
                        android:layout_height="27dp" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="1dp" />

                    <TextView
                        android:id="@+id/index_f1_text"
                        style="@style/index_font_style"
                        android:text="小说" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/top_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/top_2_pic"
                        android:src="@mipmap/index_icon_nav_1"
                        android:layout_width="27dp"
                        android:layout_height="27dp" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="1dp" />

                    <TextView
                        android:id="@+id/index_f2_text"
                        android:text="音乐"
                        style="@style/index_font_style"
                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/top_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/top_3_pic"
                        android:src="@mipmap/index_icon_nav_1"
                        android:layout_width="27dp"
                        android:layout_height="27dp" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="1dp" />

                    <TextView
                        android:id="@+id/index_f3_text"
                        android:text="游戏"
                        style="@style/index_font_style"
                        />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/top_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/top_4_pic"
                        android:src="@mipmap/index_icon_nav_1"
                        android:layout_width="27dp"
                        android:layout_height="27dp" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="1dp" />

                    <TextView
                        android:id="@+id/index_f4_text"
                        android:text="视频"
                        style="@style/index_font_style"
                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/top_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/top_5_pic"
                        android:src="@mipmap/index_icon_nav_1"
                        android:layout_width="27dp"
                        android:layout_height="27dp" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="1dp" />

                    <TextView
                        android:id="@+id/index_f5_text"
                        android:text="网页"
                        style="@style/index_font_style"
                        />


                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

    </FrameLayout>


    <com.ngbj.browse.view.StickyNavLayout2
        android:id="@+id/stickyNavLayout"
        android:visibility="visible"
        android:layout_below="@+id/part1"
        android:layout_above="@+id/part2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/par3"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager_gridView"
                android:layout_width="match_parent"
                android:layout_height="154dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@color/line_color"></View>

        </LinearLayout>

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/tl_5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            tl:tl_textsize="17sp"
            tl:tl_indicator_color="#0162FF"
            tl:tl_indicator_height="2dp"
            tl:tl_indicator_width_equal_title="true"
            tl:tl_tab_space_equal="true"
            tl:tl_textSelectColor="@color/font_color"
            tl:tl_textUnselectColor="@color/font_color"
            />


        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </com.ngbj.browse.view.StickyNavLayout2>

    <TextView
        android:id="@+id/te"
        android:text="ljljklj"
        android:visibility="visible"
        android:background="#BB5A2C"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />




</RelativeLayout>